        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texto_cont"
        android:layout_width="382dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
